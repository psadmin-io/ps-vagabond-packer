{
  "description": "Packer template for ps-vagabond-win base box",
  "_comment": "Build with `packer build ps-vagabond-win.json`",
  "variables": {
    "guest_additions_mode": "attach",
    "headless": "true",
    "packer_base": "{{env `PACKER_BASE`}}",
    "iso_checksum": "849734f37346385dac2c101e4aacba4626bb141c",
    "iso_name": "9600.17050.WINBLUE_REFRESH.140317-1640_X64FRE_SERVER_EVAL_EN-US-IR3_SSS_X64FREE_EN-US_DV9.ISO",
    "iso_path": "{{env `PACKER_BASE`}}/iso",
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.17050.WINBLUE_REFRESH.140317-1640_X64FRE_SERVER_EVAL_EN-US-IR3_SSS_X64FREE_EN-US_DV9.ISO",
    "memory": "2048",
    "vm_name": "ps-vagabond_win"
  },
  "builders": [{
      "name": "virtualbox",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{ user `memory` }}"],
        ["modifyvm", "{{.Name}}", "--vram", "48" ],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "guest_additions_mode": "{{ user `guest_additions_mode` }}",
      "guest_additions_path": "C:/users/vagrant/VBoxGuestAdditions.iso",
      "guest_os_type": "Windows2012_64",
      "disk_size": "204800",
      "headless": "{{ user `headless` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_command": "a:/PackerShutdown.bat",
      "shutdown_timeout": "15m",
      "floppy_files": [
        "answer_files/2012_r2/Autounattend.xml",
        "scripts/win/postunattend.xml",
        "scripts/win/boxstarter.ps1",
        "scripts/win/PackerShutdown.bat",
        "scripts/win/package.ps1",
        "scripts/win/SetupComplete-2012.cmd",
        "scripts/win/Test-Command.ps1"
      ]
    },{
      "name": "hyperv",
      "type": "hyperv-iso",
      "guest_additions_mode": "disable",
      "ram_size": "{{ user `memory` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "output_directory": "{{ user `packer_base` }}/output",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_command": "a:/PackerShutdown.bat",
      "shutdown_timeout": "15m",
      "floppy_files": [
        "answer_files/2012_r2/Autounattend.xml",
        "scripts/win/postunattend.xml",
        "scripts/win/boxstarter.ps1",
        "scripts/win/PackerShutdown.bat",
        "scripts/win/package.ps1",
        "scripts/win/SetupComplete-2012.cmd",
        "scripts/win/Test-Command.ps1"
      ]
  }],
  "provisioners": [{
      "type": "powershell",
      "inline": ["choco install powershell -y"],
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "valid_exit_codes": [ 0, 3010 ]
    },{
      "type": "windows-restart",
      "restart_timeout": "1h"
    },{
      "type": "powershell",
      "script": "scripts/win/provision.ps1"
    },{
      "type": "powershell",
      "script": "scripts/win/provision-psadmin.ps1"
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{ user `packer_base` }}/box/{{.Provider}}/{{user `vm_name`}}.box",
      "vagrantfile_template": "templates/vagrantfile-windows.template"
    }]
  ]
}
