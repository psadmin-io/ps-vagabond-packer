{
  "_comment": "Build with `packer build ps-vagabond-oel.json`",
  "builders": [
    {
      "boot_command": [
        "c",
        "linuxefi /images/pxeboot/vmlinuz inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks7efi.cfg<enter>",
        "initrdefi /images/pxeboot/initrd.img<enter>",
        "boot<enter>"
      ],
      "boot_wait": "5s",
      "communicator": "ssh",
      "cpus": "{{ user `cpus` }}",
      "disk_size": "{{ user `disk_size` }}",
      "enable_secure_boot": false,
      "generation": 2,
      "guest_additions_mode": "disable",
      "guest_os_type": "Oracle_64",
      "http_directory": "./http",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_urls": [
        "{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "memory": "{{ user `memory` }}",
      "output_directory": "{{ user `packer_base` }}/output",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "4h",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "hyperv-iso",
      "vm_name": "{{ user `vm_name` }}"
    }
  ],
  "description": "Packer template for ps-vagabond base box",
  "post-processors": [
    {
      "compression_level": 9,
      "keep_input_artifact": false,
      "output": "{{ user `packer_base` }}/box/{{.Provider}}/{{user `vm_name`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "SSH_USERNAME={{ user `ssh_username` }}",
        "SSH_PASSWORD={{ user `ssh_password` }}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "scripts/oel/kernel.sh",
        "scripts/oel/sshd.sh",
        "scripts/oel/epel.sh",
        "scripts/oel/update.sh",
        "scripts/oel/aria.sh",
        "scripts/oel/vagrant.sh",
        "scripts/oel/motd.sh",
        "scripts/oel/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "cpus": "1",
    "disk_size": "163840",
    "headless": "true",
    "iso_checksum": "dc2782bfd92b4c060cf8006fbc6e18036c27f599eebf3584a1a2ac54f008bf2f",
    "iso_checksum_type": "sha256",
    "iso_name": "OracleLinux-R7-U9-Server-x86_64-dvd.iso",
    "iso_path": "{{ env `PACKER_BASE` }}/iso",
    "iso_url": "https://yum.oracle.com/ISOS/OracleLinux/OL7/u9/x86_64/OracleLinux-R7-U9-Server-x86_64-dvd.iso",
    "kickstart": "ks7efi.cfg",
    "memory": "1024",
    "packer_base": "{{ env `PACKER_BASE` }}",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "version": "1.0.5",
    "version_description": "Update to OEL 7.9",
    "vm_name": "ps-vagabond_ol7"
  }
}

